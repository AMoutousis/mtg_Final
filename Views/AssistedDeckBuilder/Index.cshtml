
@model AssistedDeckViewModel


@{
    ViewData["Title"] = "AssistedDeckTaskListViewModel";
}


<h1>Assisted Deck Task Manager</h1>


<table>
    <tr>
        <th>Task Name</th>
    </tr>
    <tr>
        @if (Model.DeckStatus.Substring(0, 1) == "f")
        {

            <td>
                <a href="../AssistedDeckBuilder/FindDraw" class="btn-danger">Add Draw</a>
            </td>

        }
        else
        {

            <td class="btn-success">Card Draw Looking Good!</td>

        }
    </tr>

<tr>
    @if (Model.DeckStatus.Substring(1, 1) == "f")
    {

        <td>
            <a href="../AssistedDeckBuilder/FindRamp" class="btn-danger">Add Ramp</a>
        </td>

    }
    else
    {

        <td class="btn-success">Ready to keep up with opponents with your ramp!</td>

    }
</tr>

<tr>
    @if (Model.DeckStatus.Substring(2, 1) == "f")
    {

        <td>
            <a href="../AssistedDeckBuilder/FindSingleRemoval" class="btn-danger">Add Single Target Removal</a>
        </td>

    }
    else
    {

        <td class="btn-success">Ready to answer your opponents threats!</td>

    }
</tr>
   

<tr>
    @if (Model.DeckStatus.Substring(3, 1) == "f")
    {

        <td>
            <a href="../AssistedDeckBuilder/FindMultiRemoval" class="btn-danger">Add Board Clears</a>
        </td>

    }
    else
    {

        <td class="btn-success">Ready to reset the board!</td>

    }
</tr>
   
    <tr>
        @if (Model.DeckStatus.Substring(4, 1) == "f")
        {

            <td>
                <a href="../AssistedDeckBuilder/StartCreatures" class="btn-danger">Add Creatures</a>
            </td>
        }
        else
        {

            <td class="btn-success">Your Army is Ready!</td>

        }

    </tr>

    <tr>
        @if (Model.DeckStatus == "ttttt")
        {
            <td>
                <a href="" class="btn">View Finished Deck</a>
            </td>
        }
        else
        {
            <td>
                <a href="" class="btn">View Current Deck</a>
            </td>
        }
    </tr>

</table>


