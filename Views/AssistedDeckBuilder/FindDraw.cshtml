@model CardSearchObject

<h1>Card Draw</h1>
<br />
<p>If you want to win the game, you're going to have to draw more cards! Choose 10 draw spells so you can win your next game!</p>

<form asp-action="CompleteAssistedDeck" asp-controller="AssistedDeckBuilder">
    <table class="table">
        <tr>
            <th>Number</th>
            <th>Name</th>
            <th>Description</th>
            <th>Mana</th>
            <th>Image</th>
            <th>Add Card</th>
        </tr>

        @for (int i = 0, count = 1; i < Model.data.Count(); i++, count++)
        {
            string image = "";
            if (Model.data[i].image_uris != null)
            {
                image = Model.data[i].image_uris.small;
            }
            else
            {
                image = "https://img4.wikia.nocookie.net/__cb20140414012548/villains/images/8/86/Dennis_Nedry.png";
            }

            <tr>
                <td>@count.</td>
                <td>@Model.data[i].name</td>
                @if (Model.data[i].oracle_text == null)
                {
                    <td>Ah, ah, ah, you didn't say the <b>*magic*</b> word</td>
                }
                else
                {
                    <td>@Model.data[i].oracle_text</td>

                }
                <td>@Model.data[i].mana_cost</td>
                <td><img src="@image" /></td>
                <td><input name="SelectedCard" type="checkbox" value="@Model.data[i].id" /></td>
            </tr>
        }
        <input type="submit" />

    </table>
</form>