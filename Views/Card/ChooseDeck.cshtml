
@{
    ViewData["Title"] = "ChooseDeck";
}

@model List<string>

    <div style="position:sticky;text-shadow: 1px 1px 2px white; top:0px; background-color:gray; padding-bottom:2px; margin-bottom: 15px; border-bottom: solid grey 3px; text-align:center; border-radius:15px;"><h1>Choose Deck</h1></div>

<style>
    body {
        background-image: linear-gradient(rgba(0,0,0,0.7),rgba(0,0,0,0.7)),url("https://media.wizards.com/images/magic/daily/wallpapers/wp_solring_1280x960.jpg");
        background-size: cover;
        background-attachment: fixed;
    }
    #selectDeckButton {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 8px 19px;
        text-align: center;
        text-decoration: solid;
        display: inline-block;
        font-size: 20px;
        margin: 4px 2px;
        cursor: pointer;
        box-shadow: 5px 5px 8px black;
    }
    #deleteDeckButton {
        background-color: orangered;
        border: none;
        color: white;
        padding: 8px 19px;
        text-align: center;
        text-decoration: solid;
        display: inline-block;
        font-size: 20px;
        margin: 4px 2px;
        cursor: pointer;
        box-shadow: 5px 5px 8px black;
    }
</style>

<table style="color:white;">
    <tr>
        <th>Deck Name</th>
        <th>Deck Actions</th>
    </tr>

    @for (int d = 0; d < Model.Count; d++)
    {

<tr>

    <td>@Model[d]</td>
    <td class="btn btn-secondary">
        <a href="/card/GetDeckData?DeckName=@Model[d]">Select This Deck!</a>
    </td>
    <td class="btn btn-secondary">
        <a href="/card/NewDeckName?DeckName=@Model[d]">Rename Deck!</a>
    </td>
    <td class="btn btn-danger">
        <a href="/card/DeleteDeck?DeckName=@Model[d]">Delete Deck</a>
    </td>

</tr>

    }

        <form action="/card/ChooseCommander" method="post">
            <input type="submit" value="Create a new deck" />
        </form>
    </table>